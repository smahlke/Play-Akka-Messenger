# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()
POST    /regist                     controllers.Application.regist(username: String)
GET     /registForm                 controllers.Application.registForm()
GET     /login						controllers.Application.login()
GET     /main                       controllers.Application.main()
GET     /trivial/:name       	    controllers.Application.trivial(name: String)
GET     /local-hello/:messageString controllers.Application.localHello(messageString: String )


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
